@{int i = 1;}
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>ИД</th>
            <th>Лиц. счет</th>
            <th>Адрес</th>
            <th>ФИО</th>
            <th>Сальдо</th>
            <th>Комментарий</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WebKassa.Models.V_ABONS v in Model)
        {
            <tr class="small" onclick="location.href='@Url.Action("Payment","Manage",new {v_abon_id=v.ID })'">
                <th scope="row">@i</th>
                <td>@v.ID</td>
                <td>@v.G_LICSCHET</td>
                <td>@v.ADDRESS</td>
                <td>@v.NAME</td>
                <td>@v.BALANCE руб.</td>
                <td>@v.NOTE</td>
            </tr>
            i++;
        }
    </tbody>
</table>
